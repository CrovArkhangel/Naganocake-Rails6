<h2>プロフィール編集</h2>
<%= form_with model: [:public, @customer] do |f| %>
  <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>
 <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_area :address %>
  </div>
  <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_area :zip_code %>
  </div>
  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.text_area :email %>
  </div>
  <%= f.submit "編集内容を保存" %>
<% end %>
